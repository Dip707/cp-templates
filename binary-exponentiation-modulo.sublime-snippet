big binary_exponentiation_modulo(big n, big M) {

	big retval = 1;
	big m = mod;

	while(M > 0) {

		if(M & 1) {

			retval = ((retval % m) * (n % m)) % m;
		}

		M = M >> 1;
		n = ((n % m) * (n % m)) % m;
	}

	return retval % m;
}
]]></content>
